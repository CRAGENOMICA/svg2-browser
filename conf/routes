# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.SVG2Browser.index
GET		/select						controllers.SVG2Browser.inputSelection(request: Request )
POST	/select						controllers.SVG2Browser.generateResults( request: Request )
GET		/results					controllers.SVG2Browser.generateResults( request: Request )
GET		/about						controllers.SVG2Browser.aboutSVG2Browser( request: Request )

GET		/exampleGenes/:id			controllers.SVG2Browser.getExampleGenes( id: String )

POST	/updateOutputExperiment		controllers.SVG2Browser.updateOutputExperiment( request: Request )

GET		/getImageSVG/:id/:color		controllers.SVG2Browser.getImageSVG( id: String, color: String )
GET		/getImageBarplot/:id/:color		controllers.SVG2Browser.getImageBarplot( id: String, color: String )
GET		/getGenesFromTissue/:id/:tissue		controllers.SVG2Browser.getGenesFromTissue( id: String, tissue: String )


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
